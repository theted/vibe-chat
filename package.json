{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "AI chat application with multiple AI personalities and CLI tools",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "./start.sh",
    "cli": "npm --workspace @ai-chat/cli run start",
    "build:configs": "npm --workspace @ai-chat/ai-configs run build",
    "build:core": "npm run build:configs && npm --workspace @ai-chat/core run build",
    "build:cli": "npm run build:core && npm --workspace @ai-chat/cli run build",
    "build:server": "npm --workspace @ai-chat/server run build",
    "build:client": "npm --workspace @ai-chat/client run build",
    "build": "npm run build:core && npm run build:server && npm run build:client",
    "test": "npm run test:configs && npm run test:core && npm run test:client && npm run test:cli && npm run test:server",
    "test:configs": "npm --workspace @ai-chat/ai-configs run test",
    "test:core": "npm --workspace @ai-chat/core run test",
    "test:client": "npm --workspace @ai-chat/client run test",
    "test:cli": "npm --workspace @ai-chat/cli run test",
    "test:server": "npm --workspace @ai-chat/server run test",
    "test:e2e": "npx codeceptjs run --steps",
    "test:grok": "npm --workspace @ai-chat/core run test:grok",
    "test:openai": "npm --workspace @ai-chat/core run test:openai",
    "test:mistral": "npm --workspace @ai-chat/core run test:mistral",
    "test:gemini": "npm --workspace @ai-chat/core run test:gemini",
    "test:anthropic": "npm --workspace @ai-chat/core run test:anthropic",
    "test:deepseek": "npm --workspace @ai-chat/core run test:deepseek",
    "test:qwen": "npm --workspace @ai-chat/core run test:qwen",
    "test:kimi": "npm --workspace @ai-chat/core run test:kimi",
    "test:zai": "npm --workspace @ai-chat/core run test:zai",
    "test:cohere": "npm --workspace @ai-chat/core run test:cohere",
    "test:llama": "npm --workspace @ai-chat/core run test:llama",
    "test:perplexity": "npm --workspace @ai-chat/core run test:perplexity",
    "test:all": "npm --workspace @ai-chat/core run test:all",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:client": "npm --workspace @ai-chat/client run lint",
    "lint:server": "npm --workspace @ai-chat/server run lint",
    "lint:core": "npm --workspace @ai-chat/core run lint",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose up --build",
    "docker:debug": "docker compose -f docker-compose.debug.yml up --build",
    "docker:clean": "docker compose down --volumes && docker system prune -f"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "prettier": "^3.3.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ai",
    "chat",
    "realtime",
    "websocket",
    "react",
    "nodejs",
    "openai",
    "anthropic"
  ],
  "author": "AI Chat Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
