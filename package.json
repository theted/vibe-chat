{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "A project that allows different AI systems to communicate with each other without external control",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build:core": "npm --prefix ai-chat-realtime/packages/ai-chat-core run build",
    "build": "npm run -s build:core && tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run -s build:core && tsc --watch & node --watch dist/index.js",
    "index": "npm run build && node dist/scripts/index-mcp-chat.js",
    "index:docker": "npm run build && docker exec ai-chat-server-dev node /app/scripts/index-mcp-chat.js",
    "test": "npm run -s build:core && npx tsx --test tests/unit/*.test.ts tests/integration/*.test.ts",
    "test:integration:prepare": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:integration:prepare",
    "test:grok": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:grok",
    "test:openai": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:openai",
    "test:mistral": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:mistral",
    "test:gemini": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:gemini",
    "test:anthropic": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:anthropic",
    "test:deepseek": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:deepseek",
    "test:qwen": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:qwen",
    "test:kimi": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:kimi",
    "test:zai": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:zai",
    "test:cohere": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:cohere",
    "test:llama": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:llama",
    "test:perplexity": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:perplexity",
    "test:all": "npm --prefix ai-chat-realtime/packages/ai-chat-core run -s test:all",
    "type-check": "npm run -s build:core && tsc --noEmit",
    "test:e2e": "npx --yes -p codeceptjs -p playwright codeceptjs run --steps --config codecept.conf.cjs"
  },
  "keywords": [
    "ai",
    "chat",
    "communication",
    "openai",
    "anthropic"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-chat/core": "file:./ai-chat-realtime/packages/ai-chat-core",
    "@ai-chat/mcp-assistant": "file:./ai-chat-realtime/packages/mcp-assistant",
    "@langchain/core": "^0.2.36",
    "@langchain/openai": "^0.2.7",
    "chromadb": "^1.8.1",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.1",
    "react-syntax-highlighter": "^16.1.0",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
