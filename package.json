{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "A project that allows different AI systems to communicate with each other without external control",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "index": "node scripts/index-mcp-chat.js",
    "index:docker": "docker exec ai-chat-server-dev node /app/scripts/index-mcp-chat.js",
    "test": "node --test \"tests/unit/**/*.test.js\" \"tests/integration/**/*.test.js\"",
    "test:grok": "node tests/integration-ok-grok.js",
    "test:openai": "node tests/integration-ok-openai.js",
    "test:mistral": "node tests/integration-ok-mistral.js",
    "test:gemini": "node tests/integration-ok-gemini.js",
    "test:anthropic": "node tests/integration-ok-anthropic.js",
    "test:deepseek": "node tests/integration-ok-deepseek.js",
    "test:qwen": "node tests/integration-ok-qwen.js",
    "test:kimi": "node tests/integration-ok-kimi.js",
    "test:zai": "node tests/integration-ok-zai.js",
    "test:cohere": "node tests/integration-ok-cohere.js",
    "test:all": "npm run -s test:openai && npm run -s test:mistral && npm run -s test:grok && npm run -s test:gemini && npm run -s test:anthropic && npm run -s test:deepseek && npm run -s test:qwen && npm run -s test:kimi && npm run -s test:zai && npm run -s test:cohere",
    "test:e2e": "npx --yes -p codeceptjs -p playwright codeceptjs run --steps --config codecept.conf.cjs"
  },
  "keywords": [
    "ai",
    "chat",
    "communication",
    "openai",
    "anthropic"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-chat/core": "file:./ai-chat-realtime/packages/ai-chat-core",
    "@ai-chat/mcp-assistant": "file:./ai-chat-realtime/packages/mcp-assistant",
    "@langchain/core": "^0.2.36",
    "@langchain/openai": "^0.2.7",
    "chromadb": "^1.8.1",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.1",
    "redis": "^4.6.13"
  }
}
