{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": false,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*",
    "index.ts",
    "check_methods.ts",
    "play.ts",
    "play-screensaver.ts",
    "scripts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "ai-chat-realtime/**/*",
    "**/*.js",
    "**/dist/**/*"
  ]
}
