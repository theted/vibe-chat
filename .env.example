# AI provider API keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GROK_API_KEY=your_grok_api_key_here
QWEN_API_KEY=your_qwen_api_key_here
KIMI_API_KEY=your_kimi_api_key_here
Z_API_KEY=your_z_ai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
TOGETHER_API_KEY=your_together_api_key_here
# TOGETHER_BASE_URL=https://api.together.xyz/v1
# LLAMA_MODEL_ID=meta-llama/Llama-4.1-11B-Instruct-Maverick
OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENROUTER_APP_NAME=AI Chat Application
# OPENROUTER_APP_URL=http://localhost:3000

# Server configuration (used by packages/server and docker-compose)
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000
REDIS_URL=redis://localhost:6379

# Server behavior flags
AI_CHAT_VERBOSE_CONTEXT=false
AI_CHAT_ENABLE_PERSONAS=false
AI_CHAT_SKIP_HEALTHCHECK=false

# MCP / RAG assistant (used by CLI and server)
CHAT_ASSISTANT_SCRIPT=./packages/ai-chat-cli/dist/scripts/run-mcp-chat.js
CHAT_ASSISTANT_AUTO_INDEX=false
CHAT_ASSISTANT_COLLECTION=ai-chat-workspace
CHROMA_URL=http://localhost:8000
# CHAT_ASSISTANT_ROOT=/absolute/path/to/repo

# CLI configuration
LOG_LEVEL=info
MAX_CONVERSATION_TURNS=10
CONVERSATION_TIMEOUT_MS=300000

# Optional OpenAI-compatible base URLs
# QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# KIMI_BASE_URL=https://api.moonshot.ai/v1
# Z_BASE_URL=https://api.z.ai/api/paas/v4
# COHERE_BASE_URL=https://api.cohere.ai/v1
