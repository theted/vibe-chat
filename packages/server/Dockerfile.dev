# syntax=docker/dockerfile:1.4
# Development Server Dockerfile with Live Reloading
FROM node:22-alpine

# Enable pnpm via corepack
RUN corepack enable pnpm

WORKDIR /app

# Copy repo scripts needed for build steps
COPY scripts /scripts

# Copy and build AI configs package
COPY packages/ai-configs ./ai-configs
WORKDIR /app/ai-configs
RUN pnpm install && pnpm run build

# Copy and build core package
WORKDIR /app
COPY packages/ai-chat-core ./ai-chat-core
WORKDIR /app/ai-chat-core
RUN pnpm install && pnpm run build

# Copy and build MCP assistant package
WORKDIR /app
COPY packages/mcp-assistant ./mcp-assistant
WORKDIR /app/mcp-assistant
RUN pnpm install && pnpm run build

# Switch to server directory and copy package files
WORKDIR /app/server
COPY packages/server/package.json ./
COPY packages/server/tsconfig.json ./

# Install server dependencies including nodemon
RUN pnpm install

# Expose node_modules for workspace packages
RUN ln -s /app/server/node_modules /app/node_modules

# Copy server source (will be overridden by volume in dev)
COPY packages/server/src ./src

# Expose port
EXPOSE 3001

# Use the dev script for live reloading in development
CMD ["pnpm", "run", "dev"]
