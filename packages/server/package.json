{
  "name": "@ai-chat/server",
  "version": "1.0.0",
  "description": "Real-time Vibe chat server with WebSocket support",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && swc src -d dist",
    "start": "npm run build && node dist/app.js",
    "dev": "npm run build && (swc src -d dist --watch & tsc --noEmit --watch & nodemon --delay 1 --watch dist --watch ../ai-chat-core/src --ext js dist/app.js)",
    "test": "node --import tsx --test \"src/**/*.test.ts\"",
    "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js --fix"
  },
  "dependencies": {
    "@ai-chat/ai-configs": "file:../ai-configs",
    "@ai-chat/core": "file:../ai-chat-core",
    "@ai-chat/mcp-assistant": "file:../mcp-assistant",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "nodemon": "^3.0.2",
    "openai": "^4.52.1",
    "redis": "^4.6.14",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.0",
    "@swc/core": "^1.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^24.10.1",
    "eslint": "^8.56.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "websocket",
    "realtime",
    "chat",
    "ai"
  ],
  "author": "AI Chat Team",
  "license": "MIT"
}
