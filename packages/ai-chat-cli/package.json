{
  "name": "@ai-chat/cli",
  "version": "1.0.0",
  "description": "CLI for AI-to-AI conversations",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-chat": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && bun ../../scripts/resolve-path-aliases.mjs .",
    "start": "bun run build && bun dist/index.js",
    "dev": "tsc --watch & bun --watch dist/index.js",
    "test": "bunx tsx --test tests/integration/*.test.ts"
  },
  "dependencies": {
    "@ai-chat/core": "file:../ai-chat-core",
    "@ai-chat/mcp-assistant": "file:../mcp-assistant",
    "dotenv": "^16.4.7",
    "redis": "^4.6.14"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
