# Development Server Dockerfile with Live Reloading
FROM node:18-alpine

WORKDIR /app

# Copy and install core package first
COPY packages/ai-chat-core ./ai-chat-core
WORKDIR /app/ai-chat-core
RUN npm install

# Copy MCP assistant package
WORKDIR /app
COPY packages/mcp-assistant ./mcp-assistant

# Install MCP assistant dependencies (shared via workspace links)
WORKDIR /app/mcp-assistant
RUN npm install --omit=dev

# Switch to server directory and copy package files
WORKDIR /app/server
COPY packages/server/package*.json ./

# Install server dependencies including nodemon
RUN npm install

# Expose node_modules for workspace packages
RUN ln -s /app/server/node_modules /app/node_modules

# Copy server source (will be overridden by volume in dev)
COPY packages/server/src ./src

# Expose port
EXPOSE 3001

# Use nodemon for live reloading in development
CMD ["npx", "nodemon", "--watch", "/app/server/src", "--watch", "/app/ai-chat-core/src", "src/app.js"]
