{
  "name": "ai-chat-realtime",
  "version": "1.0.0",
  "description": "Real-time AI chat application with multiple AI personalities",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "./start.sh",
    "install:all": "npm install && cd packages/ai-chat-core && npm install && cd ../server && npm install && cd ../client && npm install",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "lint:client": "cd packages/client && npm run lint",
    "lint:server": "cd packages/server && npm run lint",
    "lint:core": "cd packages/ai-chat-core && npm run lint",
    "build:client": "cd packages/client && npm run build",
    "test": "echo 'No tests specified'",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose up --build",
    "docker:debug": "docker compose -f docker-compose.debug.yml up --build",
    "docker:clean": "docker compose down --volumes && docker system prune -f"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "keywords": ["ai", "chat", "realtime", "websocket", "react", "nodejs"],
  "author": "AI Chat Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}